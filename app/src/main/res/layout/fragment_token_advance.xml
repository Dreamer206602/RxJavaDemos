<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="end"
              android:orientation="vertical"
              android:paddingEnd="8dp"
              android:paddingStart="8dp"
              tools:context="com.tq.rxjavademos.fragment.TokenAdvanceFragment">

    <include
        layout="@layout/tip_bt"/>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp">


        <TextView
            android:id="@+id/tokenTv"
            android:background="#11333333"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
    </android.support.v4.widget.SwipeRefreshLayout>

    <Button
        android:id="@+id/requestBt"
        android:text="@string/request_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/invalidateTokenBt"
        android:text="@string/invalidate_token"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>
